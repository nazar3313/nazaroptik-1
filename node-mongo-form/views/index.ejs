<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Form Listesi</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
  
    h1 {
      text-align: center;
      color: #333;
      margin-top: 20px;
    }
  
    .form-table {
      margin-top: 20px;
    }
  
    .form-table th,
    .form-table td {
      border: 1px solid #ddd;
      padding: 10px;
      text-align: left;
    }
  
    .form-table th {
      background-color: #f2f2f2;
    }
  
    .form-img {
      max-width: 100%;
      height: auto;
      border-radius: 5px;
    }
  
    .delete-btn {
      color: #fff;
      background-color: #d9534f;
      border: none;
      padding: 5px 10px;
      border-radius: 3px;
      cursor: pointer;
    }
  
    .delete-btn:hover {
      background-color: #c9302c;
    }
  </style>
  
  <body>
    <div class="container">
      <h1>Form Listesi</h1>
  
      <table class="table form-table">
        <thead>
          <tr>
            <th scope="col">İsim</th>
            <th scope="col">Soyisim</th>
            <th scope="col">Fotoğraf</th>
            <th scope="col">İşlemler</th>
          </tr>
        </thead>
        <tbody>
          <% forms.forEach(form => { %>
            <tr>
              <td><%= form.isim %></td>
              <td><%= form.soyisim %></td>
              <td><img src="/uploads/<%= form.foto %>" alt="Foto" style="width:50px;height:50px;"></td>
              <td>
                <!-- Silme butonu -->
                <form action="/delete-user/<%= form._id %>" method="post" class="deleteForm">
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit" class="btn btn-danger">Sil</button>
                </form>
                
                
                
                
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  
    <script>
async function deleteUser(userId) {
  try {
    const response = await fetch(`/delete-user/${userId}?_method=DELETE`, {
      method: 'POST', // Method'ı POST olarak ayarla
      headers: {
        'Content-Type': 'application/json',
      },
    });

    if (response.ok) {
      // Kullanıcı başarıyla silindiğinde sayfayı yenile
      location.reload();
    } else {
      console.error('Kullanıcı silme hatası:', response.statusText);
    }
  } catch (error) {
    console.error('Kullanıcı silme hatası:', error.message);
  }
}

    </script>
    <script src="../public/js/script.js"></script>

  </body>

</html>
